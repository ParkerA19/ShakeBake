<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout3"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="@color/grey_font"
    tools:context="com.example.pandrews.shakebake.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/app_bar_side"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/include" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scrollbars="vertical">

            <RelativeLayout
                android:id="@+id/rlUserHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <ImageView
                    android:id="@+id/ivFiller"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@color/appBackground" />

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_menu_camera"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivProfileImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="Name"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/appBackground"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="Username"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/appBackground"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/ivProfileFrame"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/tvUsername"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    app:srcCompat="?android:attr/windowBackground" />

                <TextView
                    android:id="@+id/tvAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/ivProfileFrame"
                    android:layout_alignLeft="@+id/ivProfileFrame"
                    android:layout_alignRight="@+id/ivProfileFrame"
                    android:layout_alignStart="@+id/ivProfileFrame"
                    android:layout_below="@+id/tvUsername"
                    android:gravity="center_horizontal"
                    android:text="About"
                    android:textColor="@color/appBackground"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvAboutInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivLine4"
                    android:layout_alignEnd="@+id/ivProfileFrame"
                    android:layout_alignLeft="@+id/ivProfileFrame"
                    android:layout_alignRight="@+id/ivProfileFrame"
                    android:layout_alignStart="@+id/ivProfileFrame"
                    android:layout_below="@+id/tvAbout"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Cereal Luvr"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/ivLine4"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignEnd="@id/ivProfileFrame"
                    android:layout_alignLeft="@id/ivProfileFrame"
                    android:layout_alignRight="@id/ivProfileFrame"
                    android:layout_alignStart="@id/ivProfileFrame"
                    android:layout_alignTop="@id/ivProfileFrame"
                    android:layout_marginTop="100dp"
                    app:srcCompat="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/ivLine5"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/ivProfileFrame"
                    android:layout_alignStart="@+id/ivProfileFrame"
                    android:layout_below="@+id/ivLine4"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/ivLine6"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/ivLine5"
                    android:layout_alignStart="@+id/ivLine5"
                    android:layout_below="@+id/ivLine4"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/llPosts"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/flContainer"
                    android:layout_alignLeft="@+id/ivProfileFrame"
                    android:layout_alignStart="@+id/ivProfileFrame"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvPostCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="roboto"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="5"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvPosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:fontFamily="roboto"
                        android:text="Posts" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFollowers"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/flContainer"
                    android:layout_centerHorizontal="true"
                    android:onClick="onFollowers"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFollowersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textSize="20sp"
                        android:fontFamily="roboto"
                        android:textColor="@android:color/black"
                        android:text="5"/>

                    <TextView
                        android:id="@+id/tvFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:text="Followers" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:onClick="onFollowing"
                    android:layout_above="@+id/flContainer"
                    android:layout_alignEnd="@+id/ivProfileFrame"
                    android:layout_alignRight="@+id/ivProfileFrame"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvFollowingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textSize="20sp"
                        android:fontFamily="roboto"
                        android:textColor="@android:color/black"
                        android:text="5"/>


                    <TextView
                        android:id="@+id/tvFollowing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:text="Following" />

                </LinearLayout>



                <FrameLayout
                    android:id="@+id/flContainer"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ivProfileFrame"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true">

                </FrameLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_side"
        app:menu="@menu/activity_side_drawer" />

</android.support.v4.widget.DrawerLayout>
