<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/Main_card_corner_radius"
    card_view:cardElevation="@dimen/Main_card_elevation"
    android:layout_marginTop="@dimen/Main_vertical_margin"
    android:layout_marginBottom="@dimen/Main_vertical_margin"
    android:layout_marginLeft="@dimen/Main_horizontal_margin_small"
    android:layout_marginRight="@dimen/Main_horizontal_margin_small"
    tools:context="com.example.pandrews.shakebake.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/Main_profile_image_margin"
                android:layout_marginLeft="@dimen/Main_profile_image_margin"
                android:layout_marginRight="@dimen/Main_profile_image_margin_small"
                android:layout_marginTop="@dimen/Main_profile_image_margin"
                app:srcCompat="@drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:fontFamily="roboto"
                android:textColor="@color/Main_text_color_black"
                android:textSize="14sp" />

        </LinearLayout>

        <VideoView
            android:id="@+id/vvMedia"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="@dimen/Main_vertical_margin"
            android:layout_marginLeft="@dimen/Main_horizontal_margin"
            android:layout_marginRight="@dimen/Main_horizontal_margin"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Main_horizontal_margin_large"
                    android:layout_marginStart="@dimen/Main_horizontal_margin_large"
                    android:fontFamily="roboto"
                    android:maxWidth="220dp"
                    android:text="TextView"
                    android:textColor="@color/Main_text_color_black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Main_vertical_margin_large"
                    android:layout_marginStart="@dimen/Main_vertical_margin_large"
                    android:paddingBottom="@dimen/Main_vertical_margin_large">

                    <TextView
                        android:id="@+id/tvTag1"
                        style="@style/tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/Main_horizontal_margin_small"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="Tag1" />

                    <TextView
                        android:id="@+id/tvTag2"
                        style="@style/tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/Main_horizontal_margin_small"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="Tag2" />

                    <TextView
                        android:id="@+id/tvTag3"
                        style="@style/tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="Tag3" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibFork"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="fitCenter"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    app:srcCompat="@drawable/vector_real_fork" />

                <TextView
                    android:id="@+id/tvForks"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="roboto"
                    android:gravity="center"
                    android:minWidth="30dp"
                    android:text="3000000"
                    android:textColor="@color/Main_text_color_black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>