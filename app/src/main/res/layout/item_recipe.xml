<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/Main_card_corner_radius"
    card_view:cardElevation="@dimen/Main_card_elevation"
    android:layout_marginTop="@dimen/Main_vertical_margin"
    android:layout_marginBottom="@dimen/Main_vertical_margin"
    android:layout_marginLeft="@dimen/Main_horizontal_margin_small"
    android:layout_marginRight="@dimen/Main_horizontal_margin_small"
    tools:context="com.example.pandrews.shakebake.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/Main_profile_image_margin"
                android:layout_marginLeft="@dimen/Main_profile_image_margin"
                android:layout_marginRight="@dimen/Main_profile_image_margin"
                android:layout_marginTop="@dimen/Main_profile_image_margin"
                app:srcCompat="@drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:fontFamily="roboto"
                android:textColor="@color/Main_text_color_black"
                android:textSize="18sp" />

        </LinearLayout>



        <VideoView
            android:id="@+id/vvMedia"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llImage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/Main_vertical_margin_large"
            android:layout_marginLeft="@dimen/Main_horizontal_margin"
            android:layout_marginRight="@dimen/Main_horizontal_margin"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/ibFork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/vvMedia"
            android:layout_alignRight="@+id/vvMedia"
            android:layout_below="@+id/vvMedia"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:srcCompat="@drawable/vector_real_fork" />

        <TextView
            android:id="@+id/tvForks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vvMedia"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/ibFork"
            android:layout_toStartOf="@+id/ibFork"
            android:fontFamily="roboto"
            android:text="TextView"
            android:textColor="@color/Main_text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="roboto"
            android:textColor="@color/Main_text_color_black"
            android:layout_marginLeft="@dimen/Main_horizontal_margin"
            android:layout_marginBottom="@dimen/Main_vertical_margin"
            android:textSize="24sp"
            android:layout_alignTop="@id/ibFork"
            android:layout_alignLeft="@id/vvMedia"
            android:layout_alignStart="@id/vvMedia" />

        <TextView
            android:id="@+id/tvTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvTitle"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginBottom="@dimen/Main_vertical_margin_large"
            android:layout_marginRight="@dimen/Main_horizontal_margin"
            android:fontFamily="roboto"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/appBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTag1"
            android:layout_marginRight="@dimen/Main_horizontal_margin"
            android:layout_toEndOf="@+id/tvTag1"
            android:layout_toRightOf="@+id/tvTag1"
            android:fontFamily="roboto"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/appBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTag2"
            android:layout_toEndOf="@+id/tvTag2"
            android:layout_toRightOf="@+id/tvTag2"
            android:fontFamily="roboto"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/appBackground"
            android:textSize="20sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>