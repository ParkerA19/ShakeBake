<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout2"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_side"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scrollbars="none">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.pandrews.shakebake.DetailsActivity">


                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/ivProfileImage"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/ivProfileImage"
                    android:layout_toRightOf="@+id/ivProfileImage"
                    android:textColor="@color/appFont2"
                    android:hint="Username"
                    android:text="TextView" />

                <ImageView
                    android:id="@+id/ivMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ivProfileImage"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ivMedia"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:hint="Title"
                    android:textColor="@color/appFont2"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvForks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ivMedia"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/appFont2"
                    android:hint="Forks"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvForks"
                    android:layout_alignLeft="@+id/tvTitle"
                    android:layout_alignRight="@+id/tvForks"
                    android:layout_alignStart="@+id/tvTitle"
                    android:layout_below="@+id/tvTitle"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Description"
                    android:textColor="@color/appFont2"
                    android:text="TextView" />

                <ImageView
                    android:id="@+id/ivLine1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvDescription"
                    android:src="@android:color/darker_gray"/>

                <FrameLayout
                    android:id="@+id/flIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignLeft="@+id/tvTitle"
                    android:layout_alignStart="@+id/tvTitle"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/ivLine1" />

                <ImageView
                    android:id="@+id/ivLine2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/flIngredients"
                    android:src="@android:color/darker_gray"/>

                <FrameLayout
                    android:id="@+id/flSteps"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignLeft="@+id/flIngredients"
                    android:layout_below="@+id/ivLine2"
                    android:layout_alignEnd="@+id/flIngredients"
                    android:layout_alignStart="@+id/flIngredients"
                    android:layout_alignRight="@+id/flIngredients"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_side"
        app:menu="@menu/activity_side_drawer" />

</android.support.v4.widget.DrawerLayout>