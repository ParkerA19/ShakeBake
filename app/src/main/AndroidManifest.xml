<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pandrews.shakebake">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/phone_new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OpeningActivity"
            android:label="Shake &amp; Make"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity
            android:name=".AddRecipeActivity"
            android:theme="@style/AddRecipeTheme"/>
        <activity android:name=".AddActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SideActivity"
            android:label="@string/title_activity_side"
            android:theme="@style/NavTheme" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".FriendsActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".InstructionsActivity" />
        <activity android:name=".AddStepsActivity" />
        <activity
            android:name=".StepActivity"
            android:label="@string/title_activity_step"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>